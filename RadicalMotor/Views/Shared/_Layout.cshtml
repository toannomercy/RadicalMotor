<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RadicalMotor</title>
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="/RadicalMotor.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="/css/bootstrap.min.css" />

	<script src="/jquery/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
	<script src="/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
	<script src="/js/site.js" asp-append-version="true"></script>

	<!-- Icon Font Stylesheet -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
		  rel="stylesheet" />
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
		  rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
				<a asp-controller="home"
				   asp-action="index"
				   class="navbar-brand d-flex align-items-center px-4 px-lg-5">
					<h2 class="m-0 text-primary">
						<i class="fa fa-solid fa-motorcycle"></i> RadicalMotor
					</h2>
				</a>
				<button type="button"
						class="navbar-toggler me-4"
						data-bs-toggle="collapse"
						data-bs-target="#navbarCollapse">
					<span class="navbar-toggler-icon"></span>
				</button>
				<h3 class="m-0 text-primary">
					<a asp-controller="Home" asp-action="Index">
						<i class="bi bi-backspace-fill"></i>
					</a>
				</h3>
@* 				<div class="collapse navbar-collapse" id="navbarCollapse">
					<div class="navbar-nav text-primary ms-auto p-4 p-lg-0">
						<a asp-controller="home"
						   asp-action="index"
						   class="nav-item nav-link ">
							Home
						</a>
						<a asp-controller="Products"
						   asp-action="index"
						   class="nav-item nav-link ">
							Motorcycles
						</a>
						<div class="nav-item dropdown">
							<a asp-controller="service"
							   asp-action="index"
							   class="nav-item nav-link">
								Services
							</a>
						</div>
						<div class="nav-item">
							<ul class="navbar-nav">
								<li class="nav-item ">
									<partial name="_LoginPartial" />
								</li>
							</ul>
						</div>
					</div> *@
				</div>
            </div>
        </nav>
    </header>
    <div class="container">
		@RenderBody()
    </div>

	<footer class="footer text-muted bg-dark">
		<div class="container text-center text-primary">
            &copy; 2024 - RadicalMotor
        </div>
    </footer>
	


	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
