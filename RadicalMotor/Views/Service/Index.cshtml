<script src="https://www.google.com/recaptcha/api.js" async defer></script>

<script>
	$(document).ready(function () {
		$('#datetimepicker1').datetimepicker({
			format: 'L',
			defaultDate: moment()
		});

		$('#book-now-button').click(function () {
			$(this).hide();
			$('#captchaContainer').show();
		});

		$('#appointment-form').submit(function (event) {
			event.preventDefault();
			var formData = {
				Name: $('#Name').val(),
				PhoneNumber: $('#PhoneNumber').val(),
				SelectedServiceId: $('#SelectedServiceId').val(),
				ServiceDate: moment($('#ServiceDate').val(), 'MM/DD/YYYY').toISOString(),
				Notes: $('#Notes').val(),
				RecaptchaResponse: $('#g-recaptcha-response').val()
			};

			$.ajax({
				type: "POST",
				url: "@Url.Action("BookAppointment", "Service")",
				contentType: "application/json",
				data: JSON.stringify(formData),
				success: function (response) {
					if (response.success) {
						$('#success-message').removeClass('d-none').text(response.message);
						$('#error-message').addClass('d-none');
						$('#captchaContainer').hide();
						$('#book-now-button').show();
					} else {
						$('#error-message').removeClass('d-none').text(response.message || response.errors.join(", "));
						$('#success-message').addClass('d-none');
					}
				},
				error: function (xhr, status, error) {
					$('#error-message').removeClass('d-none').text("An error occurred: " + error);
					$('#success-message').addClass('d-none');
					$('#captchaContainer').hide();
					$('#book-now-button').show();
				}
			});
		});
	});
</script>
